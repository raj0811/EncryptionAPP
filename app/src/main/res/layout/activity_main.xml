<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/morsebtn"
        android:layout_width="173dp"
        android:layout_height="70dp"
        android:onClick="morseCode"
        android:text="Encrypt morse code"
        android:textAlignment="center"

        android:textColor="#FFFFFF"
        app:backgroundTint="#2B2A2A"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461"
        app:rippleColor="#F32121"
        app:strokeColor="#E91E63" />

    <Button
        android:id="@+id/button3"
        android:layout_width="172dp"
        android:layout_height="64dp"
        android:onClick="openActivity"
        android:text="Encrypt message"
        app:backgroundTint="#2C2C2C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.859" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="302dp"
        android:layout_height="95dp"
        android:text="CONVERT YOUR MESSAGE TO MORSE CODE"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/morsebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="312dp"
        android:layout_height="88dp"
        android:text="CONVERT YOUR ESSAGE TO SYMBOLIC ENCRYPTION"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/morsebtn" />
</androidx.constraintlayout.widget.ConstraintLayout>